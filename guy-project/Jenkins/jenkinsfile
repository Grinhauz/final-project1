# dockerhub : www.hub.docker.com/u/grinhauz

pipeline {
    agent any
    
    environment {
        DOCKERHUB_USERNAME = credentials('grinhauz')
        DOCKERHUB_PASSWORD = credentials('dockerhub-password')
        IMAGE_NAME = 'grinhauz/flask-aws-monitor'
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Grinhauz/final-project1.git'
            }
        }
        
        stage('Parallel Checks') {
           
                stage('Linting') {
                    steps {
                        echo "Linting"

                        echo "Runing flake8 on python files"
                        sh 'flake8 main.py || true'

                        echo "running Hadolint on Dockerfile"
                        sh 'hadolint Dokcerfile || true'
                    }
                }
                stage('Security Scan') {
                    steps {
                        echo 'Security scanning steps for dependencies and container security'
                    }
                }
            
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Building image'
                sh 'docker build -d $IMAGE_NAME .'
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo 'Pushing to Docker hub'
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS_ID}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh '''
                        echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                        docker push $IMAGE_NAME
                    '''
                }    
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
        }
    }
}
